      },
      {
       "type": "checkbox",
       "id": "blog_author",
       "label": "Show author"
      },
      {
        "type": "checkbox",
        "id": "read_time",
        "label": "Show estimated read time",
        "default": true
      },
      {
       "type": "checkbox",
       "id": "blog_date",
       "label": "Show date",
       "default": true
      },
      {
       "type": "checkbox",
       "id": "blog_comment_count",
       "label": "Show comment count",
       "default": true
      },
      {
       "type": "checkbox",
       "id": "read_more_link",
       "label": "Show continue reading link for blog post excerpts",
       "default": true
      },
      {
        "type": "select",
        "id": "excerpt_display",
        "label": "Excerpt display",
        "default": "full_excerpt",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
